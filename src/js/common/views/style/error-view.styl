@import "../../../components/style/index"

.error-view {
  position: fixed;
  left: 0;
  right: 0;
  top: 45px;
  bottom: 0;
  background-color: $color-white;
  z-index: 3000;
  min-height: 600px;
  
  &__header {
    background-color: $color-dark-blue-0;
    height: 55px;
  }
  
  &__header &__logo {
    color: $color-rare-gray-X;
    font-size: $font-size-XXXL;
    margin: 10px 0 10px 50px;
    display: inline-block;
  }
  
  &__content {
    margin: auto;
    max-width: 406px;
    margin-top: 243px;
  }
  
  &__content &__icon-wrapper {
    display: inline-block;
    vertical-align: top;
    margin-right: 20px;
    margin-top: 5px;
  }
  
  &__content &__text {
    display: inline-block;
    margin-bottom: 0;
    max-width: 350px;
    font-size: $font-size-L;
    font-weight: bold;
    
    span {
      font-size: inherit;
      font-weight: bold;
      display: block;
    }
    
    a {
      font-size: inherit;
    }
  }
  
  &__text &__label {
    font-size: $font-size-S-K2;
    font-weight: normal;
    margin-bottom: 0;
  }
  
  &__icon-wrapper &__icon-bg {
    width: 0;
    height: 0;
    border-left: 18px solid transparent;
    border-right: 18px solid transparent;
    border-bottom: $font-size-XXXL solid $color-blue-4;
    display: inline-block;
    vertical-align: middle;
  }
  
  &__icon-wrapper &__icon {
    font-size: $font-size-XL;
    margin-left: -32px;
    display: inline-block;
    vertical-align: middle;
    margin-top: 3px;
    color: $color-yellow-6;
  }
  
  &__footer {
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    bottom: 30px;
    margin: auto;
  }
  
  &__footer &__msg {
    font-size: $font-size-XS;
    margin-bottom: 20px;
  }
  
  &__footer &__link {
    text-decoration: none;
    margin: 0 8px;
  }
  
  &__link &__link-icon {
    font-size: 35px;
  }
  
  &__link &__wechat {
    color: $color-green-4;
  }
  
  &__link &__linkedin {
    color: $color-blue-5;
  }
  
  &__link &__weibo {
    color: $color-red-3;
  }
}