@import "../style/index";

.loading-spinner {
  &-container {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    z-index: 1009;
  }

  &-relative {
    position: absolute;
  }

  &-fixed {
    position: fixed;
  }

  &-mask {
    width: 100%;
    height: 100%;
    background-color: $color-black;
    opacity: 0.5;
  }


  &-loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
   }
}